@model List<Proyecto1_MZ_MJ.Models.Pedido>

<h2>Resumen de Todos los Pedidos</h2>

@foreach (var pedido in Model)
{
    <div style="margin-bottom: 30px; border-bottom: 1px solid #ccc; padding-bottom: 10px;">
        <p><strong>Pedido ID:</strong> @pedido.Id</p>
        <p><strong>Fecha:</strong> @pedido.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
        <table>
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Categoría</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in pedido.PedidoProductos)
                {
                    <tr>
                        <td>@item.Producto?.Nombre</td>
                        <td>@item.Producto?.Categoria</td>
                        <td>@item.Cantidad</td>
                        <td>$@item.Producto?.Precio</td>
                        <td>$@(item.Cantidad * item.Producto?.Precio ?? 0)</td>
                    </tr>
                }
            </tbody>
        </table>
        <p><strong>Total del Pedido:</strong> $@pedido.Total</p>
    </div>
}
