@model Proyecto1_MZ_MJ.Models.Producto
@{
    ViewData["Title"] = Model.Nombre;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Detalle Producto</title>
    <style>
        .product-header {
            text-align: center;
            margin-top: 30px;
        }

        .product-image {
            max-width: 300px;
            height: auto;
            margin-bottom: 20px;
        }

        .product-description {
            font-size: 1.2em;
            margin: 15px auto;
            max-width: 800px;
        }

        .accordion-item {
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-bottom: 15px;
            overflow: hidden;
        }

        .accordion-header {
            background-color: #f8f9fa;
            padding: 12px 16px;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .accordion-title {
            font-weight: bold;
            color: #28a745;
            margin: 0;
        }

        .accordion-icon {
            font-size: 20px;
            transition: transform 0.3s ease;
        }

        .accordion-content {
            display: none;
            padding: 15px;
            background-color: white;
        }

            .accordion-content.open {
                display: block;
            }
    </style>
</head>
<body>
    <div class="product-page">
        <!-- Nueva sección: imagen, nombre y descripción -->
        <div class="product-header">
            <img class="img-fluid rounded" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Imagen)" alt="@Model.Nombre" />            <h1>@Model.Nombre</h1>
            <p class="product-description">@Model.Descripcion</p>
        </div>

        <div class="product-details">
            <h3>Más información</h3>

            <div class="accordion-item">
                <div class="accordion-header" onclick="toggleAccordion('nutrition-content','nutrition-icon')">
                    <h4 class="accordion-title">Información nutricional</h4>
                    <span class="accordion-icon" id="nutrition-icon">›</span>
                </div>
                <div class="accordion-content" id="nutrition-content">
                    <table>
                        @if (!string.IsNullOrEmpty(Model.InfoNutricional))
                        {
                            @foreach (var linea in Model.InfoNutricional.Split('|'))
                            {
                                var partes = linea.Split(':');
                                if (partes.Length == 2)
                                {
                                    <tr><td>@partes[0]</td><td>@partes[1]</td></tr>
                                }
                            }
                        }
                        else
                        {
                            <tr><td>Peso</td><td>210g</td></tr>
                            <tr><td>Calorías</td><td>517Kcal - 26%</td></tr>
                        }
                    </table>
                </div>
            </div>

            <div class="accordion-item">
                <div class="accordion-header" onclick="toggleAccordion('allergen-content','allergen-icon')">
                    <h4 class="accordion-title">Información alérgenos</h4>
                    <span class="accordion-icon" id="allergen-icon">›</span>
                </div>
                <div class="accordion-content" id="allergen-content">
                    <ul>
                        @if (!string.IsNullOrEmpty(Model.Alergenos))
                        {
                            @foreach (var al in Model.Alergenos.Split('|'))
                            {
                                <li>@al</li>
                            }
                        }
                        else
                        {
                            <li>Contiene lácteos</li>
                            <li>Puede contener gluten</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleAccordion(contentId, iconId) {
            const c = document.getElementById(contentId);
            const ic = document.getElementById(iconId);
            if (c.classList.contains('open')) {
                c.classList.remove('open');
                ic.style.transform = 'rotate(0deg)';
            } else {
                c.classList.add('open');
                ic.style.transform = 'rotate(90deg)';
            }
        }
    </script>
</body>
</html>
